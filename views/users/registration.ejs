<% include('../layouts/header.ejs') %>

<link
  href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
  rel="stylesheet"
/>

<style>
  body {
    font-family: "Poppins", sans-serif;
    background: linear-gradient(to right, #ffecd2, #fcb69f);
    color: #333;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }

  .container {
    background: white;
    padding: 40px 30px;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
    text-align: center;
  }

  h1 {
    font-size: 24px;
    color: #333;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  input[type="text"],
  input[type="text"],
  input[type="password"] {
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 30px;
    font-size: 14px;
    transition: border-color 0.3s;
    font-family: "Poppins", sans-serif;
  }

  input[type="text"]:focus,
  input[type="text"]:focus,
  input[type="password"]:focus {
    border-color: #ff7e5f;
    outline: none;
  }

  input[type="submit"] {
    background: linear-gradient(to right, #ff7e5f, #feb47b);
    color: white;
    padding: 12px 15px;
    border: none;
    border-radius: 30px;
    font-size: 16px;
    cursor: pointer;
    transition: background 0.3s;
  }

  input[type="submit"]:hover {
    background: linear-gradient(to right, #feb47b, #ff7e5f);
  }

  .custom-file-input {
    position: relative;
    display: inline-block;
    width: 100%;
  }

  .custom-file-input input[type="file"] {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    opacity: 0;
    cursor: pointer;
  }

  .custom-file-input label {
    display: block;
    padding: 12px 15px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 30px;
    font-size: 14px;
    color: #999;
    cursor: pointer;
    transition: background-color 0.3s, border-color 0.3s;
  }

  .message {
    margin-top: 20px;
    font-size: 14px;
  }

  .already-user {
    margin-top: 15px;
    font-size: 14px;
    color: #666;
  }

  .already-user a {
    color: #ff7e5f;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s;
  }

  .already-user a:hover {
    color: #feb47b;
  }
</style>

<div class="container">
  <h1>User Registration</h1>
  <form action="/register" method="post" enctype="multipart/form-data">
    <input type="text" name="name" placeholder="Enter Name" />

    <% if (errors && errors.find(error => error.context && error.context.key ===
    'name')) { %>
    <p style="color: red">
      <%= errors.find(error => error.context && error.context.key ===
      'name').message %>
    </p>
    <% } %>

    <input type="text" name="email" placeholder="Enter Email" />
    <!-- Display validation error message for email -->
    <% if (errors && errors.find(error => error.context && error.context.key ===
    'email')) { %>
    <p style="color: red">
      <%= errors.find(error => error.context && error.context.key ===
      'email').message %>
    </p>
    <% } %>

    <input type="text" name="mobile" placeholder="Enter Number" />
    <!-- Display validation error message for mobile -->
    <% if (errors && errors.find(error => error.context && error.context.key ===
    'mobile')) { %>
    <p style="color: red">
      <%= errors.find(error => error.context && error.context.key ===
      'mobile').message %>
    </p>
    <% } %>

    <div class="custom-file-input">
      <input type="file" name="image" id="image" />
      <label for="image">Choose Image(Optional)</label>
    </div>

    <input type="password" name="password" placeholder="Enter Password" />
    <!-- Display validation error message for password -->
    <% if (errors && errors.find(error => error.context && error.context.key ===
    'password')) { %>
    <p style="color: red">
      <%= errors.find(error => error.context && error.context.key ===
      'password').message %>
    </p>
    <% } %>

    <input type="submit" value="Register" />
  </form>

  <% if (typeof message !== 'undefined') { %>
  <p class="message" style="color: lightgreen"><%= message %></p>
  <% } %>

  <div class="already-user">
    Already a user? <a href="/login">Login here</a>
  </div>
</div>

<% include('../layouts/footer.ejs') %>
